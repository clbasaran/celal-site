  "file_handlers": [
    {
      "action": "/admin/",
      "accept": {
        "application/json": [".json"],
        "text/markdown": [".md", ".markdown"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/#contact?email=%s"
    }
  ],
  
  "share_target": {
    "action": "/admin/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  "prefer_related_applications": false,
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://clbasaran.github.io/celal-site/pwa/manifest.json"
    }
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "note_taking": {
    "new_note_url": "/admin/notes/new"
  },
  
  "permissions": [
    "camera",
    "microphone", 
    "geolocation",
    "notifications",
    "persistent-storage",
    "background-sync"
  ],
  
  "features": [
    "CrossOriginIsolated",
    "ViewTransition"
  ]
