    "init-db": "node db/init.js",
    "// SQLite veritabanını başlatır, tabloları oluşturur ve örnek verileri ekler": "",
    "// === UTILITY SCRIPTS === //": "",
    "test": "echo \"Backend testleri henüz eklenmedi\" && exit 0",
